<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/secondbackgroundimg"
    tools:context=".MainActivity2">

    <TextView
        android:id="@+id/question_Txt"
        android:layout_width="373dp"
        android:layout_height="55dp"
        android:layout_marginTop="70dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:text="Is the following statement true or false?"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/statement_Txt"
        android:layout_width="390dp"
        android:layout_height="46dp"
        android:layout_marginTop="164dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:text=""
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/trueBtn"
        android:layout_width="137dp"
        android:layout_height="63dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="216dp"
        android:backgroundTint="@color/EstorilBlue"
        android:text="True"
        android:textSize="26dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/nextBtn"
        android:layout_width="139dp"
        android:layout_height="62dp"
        android:layout_marginStart="140dp"
        android:layout_marginEnd="145dp"
        android:layout_marginBottom="108dp"
        android:backgroundTint="@color/EstorilBlue"
        android:text="Next"
        android:textSize="26dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/falseBtn"
        android:layout_width="136dp"
        android:layout_height="64dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="216dp"
        android:backgroundTint="@color/EstorilBlue"
        android:text="False"
        android:textSize="26dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>